////About-right 
.about-right {
  display: flex;
  flex-direction: column;
  width: 35%;
  @include desktop {
    width: 45%;
  }
  @include phones {
    width: 100%;
    align-items: center;
  }
}

.about-title {
  opacity: 0.5;
  color: #464d62;
  font-family: "Open Sans - Semibold";
  font-size: 16px;
  font-weight: 400;
  line-height: 30px;
  margin-bottom: 15px;
  @include tablets {
    font-size: 14px;
  }
  @include phones {
    margin-bottom: 4px;
  }
}

.about-name {
  color: #464d62;
  font-family: "Open Sans";
  font-size: 36px;
  font-weight: 700;
  line-height: 48px;
  margin-bottom: 15px;
  @include tablets {
    font-size: 30px;
  }
  @include phones {
    margin-bottom: 7px;
  }
}

.about-work {
  opacity: 0.5;
  color: #464d62;
  font-family: "Open Sans - Semibold";
  font-size: 16px;
  font-weight: 400;
  line-height: 30px;
  margin-bottom: 75px;
  @include tablets {
    font-size: 14px;
    margin-bottom: 53px;
  }
  @include phones {
    margin-bottom: 10px;
  }
}

.about-loft {
  opacity: 0.5;
  color: #464d62;
  font-family: "Open Sans";
  font-size: 16px;
  font-style: italic;
  line-height: 30px;
  display: flex;
  position: relative;
  align-items: flex-start;
  @include tablets {
    font-size: 14px;
  }

  &::before {
    content: '*';
    display: flex;
    position: absolute;
    color: #db0200;
    opacity: 0.1;
    font-family: "Open Sans";
    font-size: 48px;
    font-style: italic;
    line-height: 30px;
    left: -55px;
    top: 7px;
  }
}
