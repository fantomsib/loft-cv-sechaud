.about {
  z-index: 10;
  display: flex;
  padding-top: 100px;
  padding-bottom: 150px;
}

.contaner-about {
  justify-content: space-around;
  display: flex;
  @include desktop {
    //justify-content: space-around;
  }
  @include tablets {
    justify-content: space-between;
    flex-wrap: wrap;
  }
  @include phones {
    flex-direction: column;
    align-items: center;
  }
}

//about-left

.about-left {
  display: flex;
  flex-direction: column;
  width: 30%;
  height: 100%;
  @include desktop {
    width: 40%;
  }
  @include tablets {
    width: 50%;
  }
  @include phones {
    width: 100%;
  }
}

.developer {
  display: flex;
  flex-direction: column;
  align-items: center;
  @include phones {
    width: 100%;
  }
}

.devoloper-photo {
  margin-bottom: 48px;
  display: flex;
  width: 200px;
  height: 200px;
  align-self: center;
  @include tablets {
    width: 172px;
    height: 172px;
  }
}

.dev-icon {
  max-width: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.developer-text {
  display: flex;
  width: 100%;
}

.developer-data__table {
  width: 100%;
  display: flex;
  
}

tbody {
  width: 100%;
  display: flex;

  //display: flex;
  flex-direction: column
}

.developer-data__row {
  width: 100%;
  display: flex;
  margin-bottom: 10px;
  &:last-child{
    margin-bottom: 0px;
  }
}

.developer-values:first-child {
  opacity: 0.3;
  color: #464d62;
  font-family: "Open Sans - Semibold";
  font-size: 16px;
  font-weight: 400;
  line-height: 30px;
  width: 50%;
}

.developer-values:last-child {
  color: #464d62;
  font-family: "Open Sans - Semibold";
  font-size: 16px;
  font-weight: 400;
  line-height: 30px;
  width: 50%;
}



